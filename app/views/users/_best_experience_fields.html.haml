.col-lg-4.col-md-6.col-sm-6.col-xs-12
  .panel.panel-default
    .panel-body
      .nested-fields

        =f.input :title
        =f.input :summary
        =f.input :start_date, as: :date, start_year: Date.today.year - 30, end_year: Date.today.year, discard_day: true, order: [:month, :year]
        =f.input :end_date, as: :date, start_year: Date.today.year - 30, end_year: Date.today.year + 2, discard_day: true, order: [:month, :year]

        = link_to_remove_association "remove BEST experience", f
